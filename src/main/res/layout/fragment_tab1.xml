<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ywapp.yw.discountcal.Tab1">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/price_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/cal_btn"
        android:layout_marginTop="11dp"
        android:ems="8"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="false"
        android:singleLine="false">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/discount_price_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/price_box"
        android:layout_below="@+id/price_box"
        android:layout_marginTop="13dp"
        android:ems="8"
        android:inputType="numberDecimal" />


    <Button
        android:id="@+id/cal_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discount_price_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Calculate" />


    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cal_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="After Discount:" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/price_box"
        android:layout_alignBottom="@+id/price_box"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:text="Price $"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/discount_price_box"
        android:layout_alignBottom="@+id/discount_price_box"
        android:layout_alignStart="@+id/textView3"
        android:text="Discount %"
        android:textAppearance="@style/TextAppearance.AppCompat" />


</RelativeLayout>
