<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ywapp.yw.discountcal.Tab2">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/price_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/discount_price_box"
        android:layout_marginTop="18dp"
        android:ems="8"
        android:inputType="numberDecimal">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/discount_price_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cal_btn"
        android:layout_below="@+id/price_box"
        android:layout_marginStart="31dp"
        android:layout_marginTop="13dp"
        android:ems="8"
        android:inputType="numberDecimal" />


    <Button
        android:id="@+id/cal_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discount_price_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:elevation="24dp"
        android:text="Get Discount %" />


    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cal_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Discount Rate:" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/price_box"
        android:layout_alignBottom="@+id/price_box"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:text="Original Price"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/discount_price_box"
        android:layout_alignBottom="@+id/discount_price_box"
        android:layout_alignStart="@+id/textView"
        android:text="Discounted Price"
        android:textAppearance="@style/TextAppearance.AppCompat" />

</RelativeLayout>
